uniform vec2 p1;
uniform vec2 p2;
uniform vec2 p3;
uniform vec2 p4;

uniform sampler2D inputTexture;

varying vec2 vert;

void vertex() {
	vert = VERTEX;
}


void fragment() {
	float width1 = p2.x - p1.x;
	float width2 = p3.x - p4.x;
	float height1 = p4.y - p1.y;
	float height2 = p3.y - p2.y;
	
	
	float xxUp   = (vert.x - p1.x) / width1;
	float xxDown = (vert.x  - p4.x ) / width2;
	
	float yyLeft  = (vert.y) / height1;
	float yyRight = (vert.y) / height2;
	
	float xx1 = xxUp; // - ((vert.y / height1) / ((p4.x - p1.x) * 2.0));
	float xx2 = xxDown;// - ((vert.y / height2) / (( p3.x - p2.x) * 1.0));
	
	float yy1  = yyLeft * (width1 - vert.x) / width1;
	float yy2  = yyRight * (width2 - vert.x) / width2;

	
	float xx = (xx2) / 1.0;
	
	float yy = yy1;
	
    vec4 col = vec4(xx, 0.0, 0.0, 1.0);
	COLOR = col;
	COLOR = texture(inputTexture, vec2(xx, UV.y));	
	
}"

